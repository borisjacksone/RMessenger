<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_widget_attach_left"
    style="@style/ListItemAttachMessage.Left">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/msg_image_avatar"
        style="@style/AvatarImageViewStyle.Left" />

    <RelativeLayout
        android:id="@+id/msg_bubble_background"
        style="@style/BubbleAttachAudioFrame.Left">

        <WebView
            android:id="@+id/msg_audio_attach"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/webview_margin"
            android:layout_width="@dimen/webview_width"
            android:layout_height="@dimen/webview_height" />

        <include layout="@layout/widget_item_attach_left" />
    </RelativeLayout>
</LinearLayout>